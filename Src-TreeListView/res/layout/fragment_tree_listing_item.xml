<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/fragment_tree_listing_item"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="@dimen/global_spacing_48"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/fragment_tree_listing_item_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textAppearance="@style/TextAppearance.Example.Body1" />

	<CheckBox
		android:id="@+id/fragment_tree_listing_item_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:focusable="false"
		android:focusableInTouchMode="true" />

</LinearLayout>
